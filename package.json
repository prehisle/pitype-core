{
  "name": "pitype-core-monorepo",
  "private": true,
  "version": "0.0.0",
  "description": "Monorepo for pitype-core typing engine and demos.",
  "license": "MIT",
  "scripts": {
    "build:core": "npm run --workspace pitype-core build",
    "sync:demo": "npm run build:core && node scripts/sync-demo.mjs",
    "watch:core": "npm run --workspace pitype-core watch",
    "watch:sync": "node scripts/watch-sync.mjs",
    "demo:serve": "live-server examples/typerank3 --port=4173 --no-browser --wait=100 --entry-file=index.html",
    "baseline:dev": "concurrently --kill-others-on-fail \"npm:watch:core\" \"npm:watch:sync\" \"npm:demo:serve\"",
    "ts-demo:serve": "npm run --workspace ts-typerank3 dev",
    "ts-demo:dev": "concurrently --kill-others-on-fail \"npm:watch:core\" \"npm:ts-demo:serve\"",
    "vue3-demo:serve": "npm run --workspace vue3-typerank3 dev",
    "vue3-demo:dev": "concurrently --kill-others-on-fail \"npm:watch:core\" \"npm:vue3-demo:serve\"",
    "test": "npm run test:baseline && npm run test:unit",
    "test:baseline": "playwright test",
    "test:unit": "vitest --run --passWithNoTests",
    "test:coverage": "vitest --run --coverage",
    "baseline:serve": "http-server examples/typerank3 -p 4173 -c-1",
    "pretest:baseline": "npm run sync:demo",
    "lint": "eslint . --ext .js,.ts,.mjs",
    "format": "prettier --write \"**/*.{js,ts,mjs,cjs,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,mjs,cjs,json,md,yml,yaml}\"",
    "type-check": "cd packages/pitype-core && tsc --noEmit -p tsconfig.typecheck.json",
    "prepare": "husky install",
    "release": "semantic-release",
    "task:menu": "node scripts/task-runner.mjs"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.47.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^12.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.0",
    "@semantic-release/npm": "^12.0.0",
    "@semantic-release/release-notes-generator": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/coverage-v8": "^2.1.4",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "http-server": "^14.1.1",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "live-server": "^1.2.2",
    "prettier": "^3.6.2",
    "semantic-release": "^23.0.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
}
